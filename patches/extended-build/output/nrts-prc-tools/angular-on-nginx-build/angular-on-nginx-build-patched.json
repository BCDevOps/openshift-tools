{
    "apiVersion": "v1",
    "kind": "BuildConfig",
    "metadata": {
        "creationTimestamp": null,
        "labels": {
            "app": "angular-on-nginx"
        },
        "name": "angular-on-nginx-build",
        "namespace": "nrts-prc-tools"
    },
    "spec": {
        "completionDeadlineSeconds": 1800,
        "nodeSelector": null,
        "output": {
            "to": {
                "kind": "ImageStreamTag",
                "name": "angular-on-nginx:latest"
            }
        },
        "postCommit": {},
        "resources": {
            "limits": {
                "cpu": "1",
                "memory": "4Gi"
            },
            "requests": {
                "cpu": "100m",
                "memory": "2Gi"
            }
        },
        "runPolicy": "Serial",
        "source": {
            "dockerfile": "FROM angular-on-nginx-build-angular-app:latest\nCOPY * /tmp/app/dist/\nCMD  /usr/libexec/s2i/run",
            "images": [
                {
                    "from": {
                        "kind": "ImageStreamTag",
                        "name": "angular-on-nginx-build-angular-app:latest"
                    },
                    "paths": [
                        {
                            "destinationDir": "tmp",
                            "sourcePath": "/opt/app-root/src/dist/."
                        }
                    ]
                }
            ],
            "type": "Dockerfile"
        },
        "strategy": {
            "dockerStrategy": {
                "from": {
                    "kind": "ImageStreamTag",
                    "name": "nginx-runtime:latest"
                }
            },
            "type": "Docker"
        },
        "triggers": [
            {
                "imageChange": {
                    "from": {
                        "kind": "ImageStreamTag",
                        "name": "nginx-runtime:latest"
                    }
                },
                "type": "ImageChange"
            }
        ]
    },
    "status": {
        "lastVersion": 0
    }
}
